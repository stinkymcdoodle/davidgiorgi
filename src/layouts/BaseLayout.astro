  <body class="min-h-screen bg-white text-neutral-900 antialiased">
    <header class="mx-auto max-w-4xl px-6 py-6 flex items-center justify-between">
      <a href="/" class="font-semibold">DG</a>
      <nav class="flex gap-6 text-sm">
        <a href="/about">About</a>
        <a href="/projects">Projects</a>
        <a href="/journal">Journal</a>
        <a href="/contact">Contact</a>
      </nav>
    </header>
    <main class="mx-auto max-w-4xl px-6 py-10">
      <slot />
    </main>
    <footer class="mx-auto max-w-4xl px-6 py-10 text-sm text-neutral-500">
